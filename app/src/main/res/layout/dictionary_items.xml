<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/round_corner"
    android:orientation="vertical">


    <TextView
        android:id="@+id/part_of_speech_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noun"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/defination_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Definations : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/defination_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 defination\n\n 2 another \n\n 3 thrid" />

    <TextView
        android:id="@+id/synonym_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Synonym : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/synonym_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 synonym\n\n 2 another \n\n 3 thrid" />


    <TextView
        android:id="@+id/antonym_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Antonym : "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/antonym_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 antonym\n\n 2 another \n\n 3 thrid" />


</LinearLayout>